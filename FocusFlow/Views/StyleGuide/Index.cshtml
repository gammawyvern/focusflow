@{
    ViewData["Title"] = "Style Guide";
}

<div class="card" style="overflow-y: auto;">
    <p>This page demonstrates the base styles used in the application. Use it to verify visual consistency and test new components.</p>

    <hr />

    <section>
        <h2>Typography</h2>
        <h1>Heading 1</h1>
        <h2>Heading 2</h2>
        <h3>Heading 3</h3>
        <p>This is a paragraph of body text. It should have comfortable line height and be easy to read. The maximum width is constrained for readability.</p>
        <p>Here is a <a href="#">link</a> inside a paragraph.</p>
    </section>

    <hr />

    <section>
        <h2>Buttons</h2>
        <button class="accent-1">Accent 1 Button</button>
        <button class="accent-2">Accent 2 Button</button>
        <button class="accent-3">Accent 3 Button</button>
    </section>

    <hr />

    <section>
        <h2>Form Inputs</h2>
        <form>
            <div>
                <label for="name">Name</label>
                <input type="text" id="name" placeholder="Enter your name" />
            </div>

            <div>
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Enter your email" />
            </div>

            <div>
                <label for="message">Message</label>
                <textarea id="message" rows="4" placeholder="Type your message"></textarea>
            </div>

            <div>
                <label for="select">Select an option</label>
                <select id="select">
                    <option>Choose...</option>
                    <option>Option 1</option>
                    <option>Option 2</option>
                </select>
            </div>

            <button class="accent-3" type="submit">Submit</button>
        </form>
    </section>

    <hr />

    <section>
        <h2>Card Layout</h2>
        <div class="card">
            <h3>Card Title</h3>
            <p>This is a simple card component with padding, rounded corners, and a subtle shadow. Useful for grouping related content.</p>
            <button class="accent-2">Card Action</button>
        </div>
    </section>

    <hr />

    <section>
        <h2>Lists</h2>
        <h3>Unordered List</h3>
        <ul>
            <li>First item</li>
            <li>Second item</li>
            <li>Third item</li>
        </ul>

        <h3>Ordered List</h3>
        <ol>
            <li>Step one</li>
            <li>Step two</li>
            <li>Step three</li>
        </ol>
    </section>
    
    <section>
        <h2>Extras & Utilities</h2>

        <h3>Image</h3>
        <img src="~/assets/sampleImage.png" alt="Sample Image" style="width: 300px;"/>

        <h3>Horizontal Rule</h3>
        <p>Before the rule</p>
        <hr />
        <p>After the rule</p>

        <h3>Inline Code</h3>
        <p>Use the <code>accent-1</code> class to style your buttons.</p>

        <h3>Code Block</h3>
        <pre><code>body {
  background-color: var(--bg);
  color: var(--text);
}</code></pre>

        <h3>Table</h3>
        <table>
            <thead>
            <tr>
                <th>Feature</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Forms</td>
                <td>Complete</td>
            </tr>
            <tr>
                <td>Buttons</td>
                <td>Complete</td>
            </tr>
            <tr>
                <td>Tables</td>
                <td>Added</td>
            </tr>
            </tbody>
        </table>

        <h3>Disabled Inputs</h3>
        <input type="text" disabled value="Disabled input" />
        <select disabled>
            <option>Disabled select</option>
        </select>
    </section>
</div>