@{
    ViewData["Title"] = "Style Guide";
}

<div class="container">
    <h1>Style Guide</h1>
    <p>This page demonstrates the base styles used in the application. Use it to verify visual consistency and test new components.</p>

    <hr />

    <section>
        <h2>Typography</h2>
        <h1>Heading 1</h1>
        <h2>Heading 2</h2>
        <h3>Heading 3</h3>
        <p>This is a paragraph of body text. It should have comfortable line height and be easy to read. The maximum width is constrained for readability.</p>
        <p>Here is a <a href="#">link</a> inside a paragraph.</p>
    </section>

    <hr />

    <section>
        <h2>Buttons</h2>
        <button class="accent-1">Accent 1 Button</button>
        <button class="accent-2">Accent 2 Button</button>
        <button class="accent-3">Accent 3 Button</button>
    </section>

    <hr />

    <section>
        <h2>Form Inputs</h2>
        <form>
            <div>
                <label for="name">Name</label>
                <input type="text" id="name" placeholder="Enter your name" />
            </div>

            <div>
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Enter your email" />
            </div>

            <div>
                <label for="message">Message</label>
                <textarea id="message" rows="4" placeholder="Type your message"></textarea>
            </div>

            <div>
                <label for="select">Select an option</label>
                <select id="select">
                    <option>Choose...</option>
                    <option>Option 1</option>
                    <option>Option 2</option>
                </select>
            </div>

            <button class="accent-3" type="submit">Submit</button>
        </form>
    </section>

    <hr />

    <section>
        <h2>Card Layout</h2>
        <div class="card">
            <h3>Card Title</h3>
            <p>This is a simple card component with padding, rounded corners, and a subtle shadow. Useful for grouping related content.</p>
            <button class="accent-2">Card Action</button>
        </div>
    </section>
</div>