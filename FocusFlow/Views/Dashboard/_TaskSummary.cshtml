@model IEnumerable<FocusFlow.Models.TaskSummaryViewModel>

<div class="dashboard-task-summary">
    <h2 class="dashboard-task-header">Today's Tasks</h2>
    @foreach (var taskSummary in Model)
    {
        <div class="task">
            <div class="task-complete">O</div>
            <div class="task-title">@taskSummary.Title</div>
            <div class="task-description">@taskSummary.Description</div>
            <div class="task-time">@taskSummary.TimeLoggedString</div>
            <div class="task-delete"></div>
        </div>
        /*
        @if (!taskSummary.IsActive)
        {
            <button class="accent-2"> Set Active </button>
        }
        */
    }
</div>