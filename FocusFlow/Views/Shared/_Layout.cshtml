<!DOCTYPE html>
<html lang="en" class="dark-mode">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="icon" type="image/png" href="~/favicon.png">
    <title>@ViewData["Title"] - FocusFlow</title>

    <link rel="stylesheet" href="~/dist/layout.css" />
</head>

<body>
    <div class="app-layout">
        <nav class="site-nav">
            <a class="site-nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            <a class="site-nav-link" asp-controller="Tasks" asp-action="Index">Tasks</a>
            <a class="site-nav-link" asp-controller="Focus" asp-action="Index">Focus</a>
        </nav>

        <main class="page-main" role="main">
            <h1 class="card">@ViewData["Title"]</h1>
            @RenderBody()
        </main>
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>