<!DOCTYPE html>
<html lang="en" class="dark-mode">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="icon" type="image/png" href="~/favicon.png">
    <title>@ViewData["Title"] - FocusFlow</title>

    <script src="~/dist/styles.bundle.js"></script>
</head>

<body>
    <div class="app-layout">
        <nav class="site-nav">
            <div class="nav-inner">
                @* <div class="nav-logo">Focus Flow</div> *@
                <ul class="nav-links">
                    <li><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li><a asp-controller="Tasks" asp-action="Index">Tasks</a></li>
                    <li><a asp-controller="Focus" asp-action="Index">Focus</a></li>
                </ul>
            </div>
        </nav>

        <main class="site-main" role="main">
            @RenderBody()
        </main>
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>