@model IEnumerable<FocusFlow.Models.TaskSummaryViewModel>

<div class="card">
    @foreach (var taskSummary in Model)
    {
        <div class="tasks-summary">
            <div class="task-info">
                <h3 class="task-title">@taskSummary.Title</h3>
                <p class="task-description">@taskSummary.Description</p>
            </div>
            @if (!taskSummary.IsActive)
            {
                <button class="accent-2"> Set Active </button>
            }
        </div>
    }
</div>